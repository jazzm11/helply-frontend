<!DOCTYPE html>
<html lang="en">

<%- include('partials/head') %>

  <body>
    <%- include('partials/nav') %>
      <link rel="stylesheet" href="/css/index.css" />

      <section>
        <h1>Welcome to Helply</h1>

        <% if (data.length> 0) { %>
          <div class="cards-container">
            <% data.forEach(item=> { %>
              <div class="card">
                <h2>
                  <%= item.title %>
                </h2>
                <% if (item.description) { %>
                  <p>
                    <%= item.description %>
                  </p>
                  <% } %>
              </div>
              <% }) %>
          </div>
          <% } else { %>
            <p>No data available</p>
            <% } %>
      </section>

      <%- include('partials/footer') %>
  </body>

</html>